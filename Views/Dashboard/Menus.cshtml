@model IEnumerable<LMU_EBurger.Models.Menu>

@{
    ViewBag.Title = "Menus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Menus</li>
        </ol>

        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-fw fa-clipboard"></i> Menu Item List
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.MenuID)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>@Html.DisplayNameFor(model => model.Images)</th>
                                <th>@Html.DisplayNameFor(model => model.Price)</th>
                                <th>@Html.DisplayNameFor(model => model.Availability)</th>
                                <th>@Html.DisplayNameFor(model => model.PrepTime)</th>
                                <th>@Html.DisplayNameFor(model => model.CategoryID)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td># @Html.DisplayFor(modelItem => item.MenuID)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>
                                    <figure><img src="@(item.Images)" alt="" class="img-thumbnail" width="50"></figure>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Price).00 LKR</td>

                                @if(item.Availability == true)
                                {
                                    <td><i class="approved">Available</i></td>
                                } else if(item.Availability == false) {
                                    <td><i class="cancel">Out of Service</i></td>
                                } else {
                                    <td><i class="pending">Not set</i></td>
                                }

                                <td>@Html.DisplayFor(modelItem => item.PrepTime)</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoryID)</td>
                                <td>
                                    @Html.ActionLink("Edit", "EditMenu", new { id = item.MenuID }) |
                                    @Html.ActionLink("Delete", "DeleteMenu", new { id = item.MenuID })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
        <!-- /tables-->
    </div>
    <!-- /.container-fluid-->
</div>