@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_MenuPageLayout.cshtml";
}


<main>
    <div class="hero_in detail_page background-image" data-background="url(/Content/img/hero_general.jpg)">
        <div class="wrapper opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.5)">

            <div class="container d-flex align-items-center justify-content-center">
                <div class="full-width">
                    <div class="row w-100">
                        <div class="col-xl-8 col-lg-8 col-md-10 mx-auto text-center">
                            @*<div class="head"><div class="score"><span>Superb<em>350 Reviews</em></span><strong>8.9</strong></div></div>*@
                            <h1>Menu Page Title</h1>
                            Menu page subtitle
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <!-- /main_info -->
            </div>
        </div>
    </div>
    <!--/hero_in-->

    <nav class="secondary_nav sticky_horizontal">
        <div class="container">
            <ul id="secondary_nav">
                @foreach (var item in Model.Categories)
                {
                    <li><a class="list-group-item list-group-item-action" href="#@(item.CategoryID)">@(item.Name)</a></li>
                }
            </ul>
        </div>
        <span></span>
    </nav>
    <!-- /secondary_nav -->

    <div class="bg_gray">
        <div class="container margin_detail">
            <div class="row">
                <div class="col-lg-12 list_menu">
                    @foreach (var item in Model.Categories)
                    {
                    <section id="@(item.CategoryID)">
                        <h4 class="margin_60_40">@(item.Name)</h4>

                        <div class="row">
                            @foreach (var menuItem in Model.Menus)
                            {
                                if (menuItem.CategoryID == item.CategoryID)
                                {
                                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                                        <div class="strip">
                                            <figure>
                                                @*<span class="ribbon off">15% off</span>*@
                                                <img src="~/Content/img/lazy-placeholder.png" data-src="@(menuItem.Images)" class="img-fluid lazy" alt="">
                                                <a href="/Home/MenuDetails/@(menuItem.MenuID)" class="strip_info">
                                                    @*<small>@(item.Name)</small>*@
                                                    <div class="item_title">
                                                        <h3>@(menuItem.Name)</h3>
                                                        @*<small>27 Old Gloucester St</small>*@
                                                    </div>
                                                </a>
                                            </figure>
                                            <ul>
                                                @*<li></li>*@
                                                <li>
                                                    @if (menuItem.Availability == true)
                                                    {
                                                        <span class="take yes">Available</span>
                                                    }
                                                    else if (menuItem.Availability == false)
                                                    {
                                                        <span class="take no">Out of Service</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="take no"></span>
                                                    }
                                                    <div class="score"><strong>@(menuItem.Price).00 LKR</strong></div>
                                                </li>
                                                <li>
                                                    <a href="#" class="add-cart yes"><i class="icon_plus_alt2"></i> Add To Cart</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /strip grid -->
                                }
                            }
                        </div>
                        
                        <!-- /row -->
                    </section>
                    }
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /bg_gray -->

    <div class="container margin_30_20">
        <div class="row">
            <div class="col-lg-12 list_menu">
                <h4>Reviews</h4>

                <div id="reviews">
                    <div class="review_card">
                        <div class="row">
                            <div class="col-md-2 user_info">
                                <figure><img src="~/Content/img/avatar4.jpg" alt=""></figure>
                                <h5>Lukas</h5>
                            </div>
                            <div class="col-md-10 review_content">
                                <h4>"Great Location!!"</h4>
                                <p>Eos tollit ancillae ea, lorem consulatu qui ne, eu eros eirmod scaevola sea. Et nec tantas accusamus salutatus, sit commodo veritus te, erat legere fabulas has ut. Rebum laudem cum ea, ius essent fuisset ut. Viderer petentium cu his. Tollit molestie suscipiantur his et.</p>
                            </div>
                        </div>
                        <!-- /row -->
                    </div>
                    <!-- /review_card -->
                </div>
                <!-- /reviews -->
            </div>
        </div>
    </div>
    <!-- /container -->
</main>
<!-- /main -->
